---
import BaseLayout from '@/layouts/BaseLayout.astro';

const values = [
  {
    title: 'Craft Over Speed',
    description: 'We believe in taking the time to do things right. Quality work requires patience, iteration, and attention to detail.',
  },
  {
    title: 'Collaboration',
    description: 'The best work happens together. We partner closely with our clients, treating every project as a shared endeavor.',
  },
  {
    title: 'Systems Thinking',
    description: 'Great design scales. We create flexible systems that grow with your brand while maintaining coherence and consistency.',
  },
];

const capabilities = [
  {
    name: 'Brand Strategy',
    slug: 'branding',
    description: 'We help you define who you are and why it matters. Through research, workshops, and strategic thinking, we uncover the core truths that make your brand distinctive.',
    services: ['Brand Positioning', 'Competitive Analysis', 'Audience Research', 'Brand Architecture', 'Naming & Verbal Identity'],
  },
  {
    name: 'Visual Identity',
    slug: 'branding',
    description: 'From logo to complete identity systems, we create the visual language that brings your brand to life. Every element designed to work together as a cohesive whole.',
    services: ['Logo Design', 'Typography Systems', 'Color Palettes', 'Iconography', 'Brand Guidelines'],
  },
  {
    name: 'Digital Experience',
    slug: 'web-design',
    description: 'Websites and applications that balance beauty with usability. We design digital products that feel intuitive and elevate your brand at every interaction.',
    services: ['Web Design', 'UI/UX Design', 'Responsive Design', 'Design Systems', 'Prototyping'],
  },
  {
    name: 'Print & Packaging',
    slug: 'print-packaging',
    description: 'Tangible design that creates lasting impressions. From business cards to product packaging, we bring craft and attention to every physical touchpoint.',
    services: ['Publication Design', 'Packaging Design', 'Marketing Collateral', 'Environmental Graphics', 'Print Production'],
  },
  {
    name: 'Art Direction',
    slug: 'art-direction',
    description: 'Creative direction that shapes how your brand shows up in the world. We guide photography, illustration, and content to tell a cohesive visual story.',
    services: ['Photo Art Direction', 'Campaign Development', 'Content Strategy', 'Illustration Direction', 'Style Guides'],
  },
  {
    name: 'Motion & Animation',
    slug: 'motion',
    description: 'Bringing brands to life through movement. From subtle UI animations to full motion graphics, we add dimension and energy to digital experiences.',
    services: ['Motion Graphics', 'UI Animation', 'Video Production', 'Animated Logos', 'Social Content'],
  },
];

const process = [
  {
    phase: 'Discovery',
    description: 'We start by listening. Understanding your business, your audience, and your ambitions. This foundation shapes everything that follows.',
  },
  {
    phase: 'Strategy',
    description: 'Insights become direction. We define the positioning, personality, and principles that will guide creative decisions.',
  },
  {
    phase: 'Create',
    description: "Ideas take form. We explore, iterate, and refine until the work feels inevitable—like it couldn't have been any other way.",
  },
  {
    phase: 'Deliver',
    description: 'Launch is just the beginning. We hand off comprehensive systems and stay available to support your team as you grow.',
  },
];
---

<BaseLayout
  title="About | Quality Time"
  description="Quality Time is an interdisciplinary design collective based in San Francisco, specializing in branding and comprehensive design systems."
>
  <article class="about">
    <!-- Hero -->
    <header class="about-hero">
      <div class="about-hero-content">
        <span class="hero-label" data-animate>About Us</span>
        <h1 class="about-title" data-animate style="--stagger: 1">
          We're an interdisciplinary
          <br />
          <em>design collective</em>
        </h1>
        <p class="about-intro" data-animate style="--stagger: 2">
          Based in San Francisco, Quality Time brings together designers, strategists, and makers
          to create work that matters. We specialize in branding and comprehensive design systems
          through an iterative, human-centered approach.
        </p>
      </div>
    </header>

    <!-- Philosophy -->
    <section class="about-section">
      <div class="section-grid">
        <div class="section-header">
          <h2 class="section-label" data-animate>Our Approach</h2>
        </div>
        <div class="section-content">
          <p class="section-text large" data-animate style="--stagger: 1">
            We believe design should be intentional, not decorative. Every choice we make—from
            typography to interaction patterns—serves a purpose. We work iteratively, testing
            and refining until the solution feels inevitable.
          </p>
          <p class="section-text" data-animate style="--stagger: 2">
            Our name reflects our philosophy: good work takes time. We're not interested in
            trends or quick fixes. We're here to build lasting relationships and create
            design systems that grow with you.
          </p>
        </div>
      </div>
    </section>

    <!-- Values -->
    <section class="about-section values-section">
      <div class="section-grid">
        <div class="section-header">
          <h2 class="section-label" data-animate>What We Believe</h2>
        </div>
        <div class="section-content">
          <ul class="values-list">
            {values.map((value, index) => (
              <li class="value-item" data-animate style={`--stagger: ${index}`}>
                <span class="value-number">{String(index + 1).padStart(2, '0')}</span>
                <h3 class="value-title">{value.title}</h3>
                <p class="value-description">{value.description}</p>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    <!-- Capabilities -->
    <section id="capabilities" class="capabilities-section">
      <div class="section-inner">
        <header class="capabilities-header">
          <span class="section-label" data-animate>Capabilities</span>
          <h2 class="capabilities-title" data-animate style="--stagger: 1">
            Everything you need to build a lasting brand
          </h2>
        </header>
        <ul class="capabilities-list">
          {capabilities.map((capability, index) => (
            <li class="capability-card" data-animate style={`--stagger: ${index}`}>
              <a href={`/contact?service=${capability.slug}`} class="capability-link">
                <div class="capability-header">
                  <span class="capability-number">{String(index + 1).padStart(2, '0')}</span>
                  <h3 class="capability-name">{capability.name}</h3>
                </div>
                <p class="capability-description">{capability.description}</p>
                <ul class="capability-services">
                  {capability.services.map((service) => (
                    <li class="service-tag">{service}</li>
                  ))}
                </ul>
                <span class="capability-cta">
                  Inquire about this service
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </span>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </section>

    <!-- Process -->
    <section class="process-section" data-bg="var(--color-ink)" data-bg-dark>
      <div class="section-inner">
        <header class="process-header">
          <span class="section-label" data-animate>Our Process</span>
          <h2 class="process-title" data-animate style="--stagger: 1">
            How we work together
          </h2>
        </header>

        <ol class="process-list">
          {process.map((step, index) => (
            <li class="process-step" data-animate style={`--stagger: ${index + 2}`}>
              <span class="step-number">{String(index + 1).padStart(2, '0')}</span>
              <h3 class="step-phase">{step.phase}</h3>
              <p class="step-description">{step.description}</p>
            </li>
          ))}
        </ol>
      </div>
    </section>

    <!-- CTA -->
    <section class="cta-section">
      <div class="cta-inner">
        <h2 class="cta-title" data-animate>Ready to start?</h2>
        <p class="cta-text" data-animate style="--stagger: 1">
          Every project begins with a conversation. Let's discuss your goals
          and explore how we can help.
        </p>
        <a href="/contact" class="cta-button" data-animate style="--stagger: 2">
          Get in touch
          <svg class="cta-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </section>
  </article>
</BaseLayout>

<style>
  .about {
    padding-bottom: 0;
  }

  /* ==========================================================================
     Hero
     ========================================================================== */
  .about-hero {
    padding: var(--space-32) var(--gutter) var(--section-gap);
  }

  .about-hero-content {
    max-width: var(--container-xl);
    margin: 0 auto;
  }

  .hero-label {
    display: block;
    font-family: var(--font-body);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    letter-spacing: var(--tracking-caps);
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
  }

  .about-title {
    font-family: var(--font-display);
    font-size: var(--text-display);
    font-weight: var(--font-regular);
    line-height: var(--leading-display);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-8);
  }

  .about-title em {
    font-style: italic;
    color: var(--color-text-secondary);
  }

  .about-intro {
    font-size: var(--text-xl);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    max-width: 55ch;
  }

  /* ==========================================================================
     Sections (Philosophy, Values)
     ========================================================================== */
  .about-section {
    padding: var(--section-gap-sm) var(--gutter);
    border-top: 1px solid var(--color-border);
  }

  .section-grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-16);
    max-width: var(--container-xl);
    margin: 0 auto;
  }

  .section-label {
    font-family: var(--font-body);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    letter-spacing: var(--tracking-caps);
    text-transform: uppercase;
    color: var(--color-text-muted);
    position: sticky;
    top: var(--space-24);
  }

  .section-text {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
    max-width: 60ch;
  }

  .section-text.large {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    line-height: var(--leading-snug);
    color: var(--color-text-primary);
  }

  /* ==========================================================================
     Values
     ========================================================================== */
  .values-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-12);
  }

  .value-item {
    max-width: 50ch;
    position: relative;
    padding-left: var(--space-12);
  }

  .value-number {
    position: absolute;
    left: 0;
    top: 0.1em;
    font-family: var(--font-body);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    letter-spacing: var(--tracking-wide);
    color: var(--color-accent);
  }

  .value-title {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: var(--font-regular);
    line-height: var(--leading-snug);
    letter-spacing: var(--tracking-tight);
    margin-bottom: var(--space-3);
    color: var(--color-text-primary);
  }

  .value-description {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
  }

  /* ==========================================================================
     Capabilities
     ========================================================================== */
  .capabilities-section {
    padding: var(--section-gap) var(--gutter);
    border-top: 1px solid var(--color-border);
  }

  .section-inner {
    max-width: var(--container-xl);
    margin: 0 auto;
  }

  .capabilities-header {
    margin-bottom: var(--space-16);
  }

  .capabilities-title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: var(--font-regular);
    letter-spacing: var(--tracking-tight);
    color: var(--color-text-primary);
    max-width: 20ch;
  }

  .capabilities-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-12);
  }

  .capability-card {
    padding: var(--space-8);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-xl);
    transition: transform var(--duration-fast) var(--ease-spring);
  }

  .capability-card:hover {
    transform: translateY(-4px);
  }

  .capability-header {
    display: flex;
    align-items: baseline;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .capability-number {
    font-family: var(--font-body);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    letter-spacing: var(--tracking-wide);
    color: var(--color-accent);
  }

  .capability-name {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: var(--font-regular);
    letter-spacing: var(--tracking-tight);
    color: var(--color-text-primary);
  }

  .capability-description {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
  }

  .capability-services {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .service-tag {
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    letter-spacing: var(--tracking-wide);
    text-transform: uppercase;
    color: var(--color-text-muted);
    padding: var(--space-1) var(--space-3);
    background-color: var(--color-bg-tertiary);
    border-radius: var(--radius-full);
  }

  .capability-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .capability-cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    margin-top: var(--space-6);
    font-family: var(--font-body);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    letter-spacing: var(--tracking-wide);
    text-transform: uppercase;
    color: var(--color-text-muted);
    opacity: 0;
    transform: translateY(4px);
    transition:
      opacity var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out),
      color var(--duration-fast) var(--ease-out);
  }

  .capability-card:hover .capability-cta {
    opacity: 1;
    transform: translateY(0);
    color: var(--color-accent);
  }

  .capability-cta svg {
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .capability-card:hover .capability-cta svg {
    transform: translateX(3px);
  }

  /* ==========================================================================
     Process
     ========================================================================== */
  .process-section {
    padding: var(--section-gap) var(--gutter);
  }

  .process-header {
    margin-bottom: var(--space-16);
  }

  .process-title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: var(--font-regular);
    letter-spacing: var(--tracking-tight);
    color: var(--color-text-primary);
  }

  .process-list {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-8);
    counter-reset: process;
  }

  .process-step {
    padding-top: var(--space-6);
    border-top: 1px solid var(--color-border);
  }

  .step-number {
    display: block;
    font-family: var(--font-body);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    letter-spacing: var(--tracking-wide);
    color: var(--color-accent);
    margin-bottom: var(--space-4);
  }

  .step-phase {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-regular);
    letter-spacing: var(--tracking-tight);
    color: var(--color-text-primary);
    margin-bottom: var(--space-3);
  }

  .step-description {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
  }

  /* ==========================================================================
     CTA
     ========================================================================== */
  .cta-section {
    padding: var(--section-gap) var(--gutter);
    text-align: center;
  }

  .cta-inner {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: var(--font-regular);
    letter-spacing: var(--tracking-tight);
    color: var(--color-text-primary);
    margin-bottom: var(--space-4);
  }

  .cta-text {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-8);
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    font-family: var(--font-body);
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    letter-spacing: var(--tracking-wide);
    text-transform: uppercase;
    color: var(--color-paper);
    background-color: var(--color-ink);
    padding: var(--space-4) var(--space-8);
    border-radius: var(--radius-full);
    text-decoration: none;
    transition:
      gap var(--duration-fast) var(--ease-spring),
      background-color var(--duration-fast) var(--ease-out);
  }

  .cta-button:hover {
    opacity: 1;
    gap: var(--space-4);
    background-color: var(--color-accent);
  }

  .cta-arrow {
    transition: transform var(--duration-fast) var(--ease-spring);
  }

  .cta-button:hover .cta-arrow {
    transform: translateX(4px);
  }

  /* Dark mode button */
  :global([data-theme="dark"]) .cta-button {
    background-color: var(--color-paper);
    color: var(--color-ink);
  }

  :global([data-theme="dark"]) .cta-button:hover {
    background-color: var(--color-accent);
    color: var(--color-paper);
  }

  /* ==========================================================================
     Responsive
     ========================================================================== */
  @media (max-width: 1024px) {
    .section-grid {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .section-label {
      position: static;
    }

    .capabilities-list {
      grid-template-columns: 1fr;
    }

    .process-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .about-hero {
      padding-top: var(--space-24);
    }

    .about-title {
      font-size: var(--text-4xl);
    }

    .about-intro {
      font-size: var(--text-lg);
    }

    .value-title {
      font-size: var(--text-xl);
    }

    .capabilities-title {
      font-size: var(--text-3xl);
    }

    .process-list {
      grid-template-columns: 1fr;
    }

    .cta-title {
      font-size: var(--text-3xl);
    }
  }
</style>
