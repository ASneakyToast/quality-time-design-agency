---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Capabilities from '@/components/home/Capabilities.astro';

const teamImageUrl = 'https://storage.googleapis.com/quality-time-assets/team.jpg';
---

<BaseLayout
  title="About | Quality Time"
  description="Quality Time is an interdisciplinary design collective based in San Francisco, specializing in branding and comprehensive design systems."
>
  <article class="about">
    <!-- Hero -->
    <header class="about-hero">
      <div class="about-hero-content">
        <h1 class="about-title" data-animate>
          We're an interdisciplinary
          <br />
          <em>design collective</em>
        </h1>
        <p class="about-intro" data-animate style="--stagger: 1">
          Based in San Francisco, Quality Time brings together designers, strategists, and makers
          to create work that matters.
        </p>
      </div>
    </header>

    <!-- Team Photo -->
    <section class="team-photo" data-animate>
      <img
        src={teamImageUrl}
        alt="The Quality Time team in our San Francisco studio"
        loading="eager"
        class="team-image"
      />
    </section>

    <!-- Capabilities -->
    <Capabilities ctaText="Request a proposal" ctaLink="/contact" />
  </article>
</BaseLayout>

<style>
  .about {
    padding-bottom: 0;
  }

  /* ==========================================================================
     Hero
     ========================================================================== */
  .about-hero {
    padding: var(--space-32) var(--gutter) var(--section-gap);
  }

  .about-hero-content {
    max-width: var(--container-xl);
    margin: 0 auto;
  }

  .about-title {
    font-family: var(--font-display);
    font-size: var(--text-display);
    font-weight: var(--font-regular);
    line-height: var(--leading-display);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-8);
  }

  .about-title em {
    font-style: italic;
    color: var(--color-text-secondary);
  }

  .about-intro {
    font-size: var(--text-xl);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    max-width: 45ch;
  }

  /* ==========================================================================
     Team Photo
     ========================================================================== */
  .team-photo {
    padding: 0 var(--gutter);
  }

  .team-image {
    width: 100%;
    max-width: var(--container-xl);
    margin: 0 auto;
    display: block;
    border-radius: var(--radius-lg);
    object-fit: cover;
    object-position: 50% 35%;
    aspect-ratio: 3 / 2;
  }

  /* ==========================================================================
     Responsive
     ========================================================================== */
  @media (max-width: 768px) {
    .about-hero {
      padding-top: var(--space-24);
    }

    .about-title {
      font-size: var(--text-4xl);
    }

    .about-intro {
      font-size: var(--text-lg);
    }
  }
</style>
