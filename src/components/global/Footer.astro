---
const currentYear = new Date().getFullYear();

const navLinks = [
  { label: 'Work', href: '/work' },
  { label: 'Team', href: '/team' },
  { label: 'Contact', href: 'mailto:hello@qualitytime.fun' },
];

const socialLinks = [
  { label: 'Instagram', href: 'https://instagram.com/qualitytime.fun' },
  { label: 'LinkedIn', href: 'https://linkedin.com/company/qualitytime' },
];
---

<footer class="footer" transition:persist transition:name="footer">
  <div class="footer-inner">
    <!-- Navigation -->
    <nav class="footer-nav">
      <div class="footer-nav-blob" aria-hidden="true"></div>
      {navLinks.map((link, index) => (
        <a href={link.href} class="footer-nav-link" data-nav-index={index}>{link.label}</a>
      ))}
    </nav>

    <!-- Bottom row -->
    <div class="footer-bottom">
      <form class="newsletter-form" data-newsletter-form>
        <input
          type="email"
          name="email"
          placeholder="Keep up to date"
          class="newsletter-input"
          required
          aria-label="Email address"
        />
        <button type="submit" class="newsletter-submit" aria-label="Subscribe">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </button>
      </form>
      <p class="footer-copyright">Â© {currentYear} Quality Time</p>
      <div class="footer-social">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            class="footer-social-link"
            target="_blank"
            rel="noopener noreferrer"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    margin-top: auto;
    padding: var(--space-16) var(--gutter) var(--space-8);
    border-top: 1px solid var(--color-border);
  }

  .footer-inner {
    max-width: var(--container-xl);
    margin: 0 auto;
  }

  /* Navigation - Collins style stacked links */
  .footer-nav {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    padding-bottom: var(--space-16);
  }

  /* Floating highlight blob */
  .footer-nav-blob {
    position: absolute;
    pointer-events: none;
    opacity: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      ellipse 400px 200px at center,
      rgba(255, 118, 0, 0.2) 0%,
      rgba(255, 118, 0, 0.08) 40%,
      transparent 70%
    );
    filter: blur(30px);
    z-index: 0;
    will-change: transform, opacity;
    transform: translate(-200px, 0);
  }

  .footer-nav-blob.is-active {
    opacity: 1;
    animation: blobFloat 6s ease-in-out infinite;
    transition:
      opacity 0.8s var(--ease-out),
      transform 1s var(--ease-out);
  }

  @keyframes blobFloat {
    0%, 100% {
      filter: blur(30px);
      scale: 1;
    }
    50% {
      filter: blur(35px);
      scale: 1.05 0.97;
    }
  }

  .footer-nav-link {
    position: relative;
    z-index: 1;
    font-family: var(--font-display);
    font-size: var(--text-5xl);
    font-weight: var(--font-regular);
    letter-spacing: var(--tracking-tighter);
    line-height: var(--leading-tight);
    color: var(--color-text-primary);
    transition: color var(--duration-fast) var(--ease-out);
  }

  .footer-nav-link:hover {
    color: var(--color-accent);
    opacity: 1;
  }

  /* Bottom row */
  .footer-bottom {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border);
  }

  /* Newsletter */
  .newsletter-form {
    display: flex;
    border: 1px solid var(--color-border-strong);
    border-radius: var(--radius-full);
    overflow: hidden;
    transition: border-color var(--duration-fast) var(--ease-out);
    max-width: 220px;
  }

  .newsletter-form:focus-within {
    border-color: var(--color-text-primary);
  }

  .newsletter-input {
    flex: 1;
    padding: var(--space-3) var(--space-4);
    font-family: var(--font-body);
    font-size: var(--text-xs);
    color: var(--color-text-primary);
    background: transparent;
    border: none;
    min-width: 0;
  }

  .newsletter-input::placeholder {
    color: var(--color-text-muted);
  }

  .newsletter-input:focus {
    outline: none;
  }

  .newsletter-submit {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-4);
    background: transparent;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .newsletter-submit:hover {
    color: var(--color-text-primary);
  }

  .footer-copyright {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-align: center;
  }

  .footer-social {
    display: flex;
    justify-content: flex-end;
    gap: var(--space-6);
  }

  .footer-social-link {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    transition: color var(--duration-fast) var(--ease-out);
  }

  .footer-social-link:hover {
    color: var(--color-text-primary);
    opacity: 1;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-nav-link {
      font-size: var(--text-4xl);
    }

    .footer-bottom {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-4);
    }

    .footer-copyright {
      grid-column: 1 / -1;
      order: -1;
    }

    .newsletter-form {
      max-width: none;
    }
  }

  @media (max-width: 480px) {
    .footer-nav-link {
      font-size: var(--text-3xl);
    }

    .footer-bottom {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .footer-social {
      justify-content: center;
    }

    .newsletter-form {
      max-width: 220px;
      margin: 0 auto;
    }
  }
</style>

<script>
  // Newsletter form handling
  const form = document.querySelector('[data-newsletter-form]') as HTMLFormElement;
  const input = form?.querySelector('.newsletter-input') as HTMLInputElement;

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    if (input?.value) {
      const originalPlaceholder = input.placeholder;
      input.value = '';
      input.placeholder = 'Thanks!';
      input.disabled = true;

      setTimeout(() => {
        input.placeholder = originalPlaceholder;
        input.disabled = false;
      }, 2000);
    }
  });

  // Footer nav blob effect
  const initFooterBlob = () => {
    const nav = document.querySelector('.footer-nav');
    const links = document.querySelectorAll('.footer-nav-link');
    const blob = document.querySelector('.footer-nav-blob') as HTMLElement;

    if (!nav || !blob || links.length === 0) return;

    const moveBlobTo = (link: Element) => {
      const navRect = nav.getBoundingClientRect();
      const linkRect = link.getBoundingClientRect();

      const x = linkRect.left - navRect.left + linkRect.width / 2;
      const y = linkRect.top - navRect.top + linkRect.height / 2;

      blob.style.transform = `translate(${x}px, ${y}px) translate(-50%, -50%)`;
      blob.classList.add('is-active');
    };

    links.forEach((link) => {
      link.addEventListener('mouseenter', () => {
        moveBlobTo(link);
      });
    });

    nav.addEventListener('mouseleave', () => {
      blob.classList.remove('is-active');
    });
  };

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFooterBlob);
  } else {
    initFooterBlob();
  }

  document.addEventListener('astro:page-load', initFooterBlob);
</script>
