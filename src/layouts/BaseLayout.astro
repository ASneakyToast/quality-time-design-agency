---
import '@/styles/global.css';
import Header from '@/components/global/Header.astro';
import Footer from '@/components/global/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
}

const {
  title = 'Quality Time',
  description = 'San Francisco design collective specializing in branding and comprehensive design systems through an iterative approach.',
  image = '/og-image.png',
  type = 'website',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullTitle = title === 'Quality Time' ? title : `${title} â€” Quality Time`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="author" content="Quality Time" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:site_name" content="Quality Time" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Preload fonts (uncomment when font files are added)
    <link rel="preload" href="/fonts/InstrumentSerif-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Satoshi-Variable.woff2" as="font" type="font/woff2" crossorigin />
    -->

    <!-- Theme color (updated for Collins palette) -->
    <meta name="theme-color" content="#f8f8f7" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#140700" media="(prefers-color-scheme: dark)" />

    <slot name="head" />
  </head>
  <body class="grain">
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />

    <!-- Global scroll reveal animation system -->
    <script>
      import '@/scripts/animations.ts';
    </script>
  </body>
</html>

<style>
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
  }
</style>
